<<div class="main box">
  <div class="box todos">
    <h2 class="box">待办事项</h2>
    <ul>
      <% @todos.each do |todo| %>
        <li>
          <% if todo.finished %>
            <del><%= todo.title %></del>
          <% else %>
            <%= todo.title %>
          <% end %>
          <span class="timeinfo"><%= todo.created_at.to_formatted_s(:db) %></span>

          <% if todo.finished %>
            <%= link_to "取消", todo_path(todo.id, todo: {finished: false}), method: :patch %>,
          <% else %>
            <%= link_to "完成", todo_path(todo.id, todo: {finished: true}), method: :patch %>,
          <% end %>

          <%= link_to "编辑", edit_todo_path(todo.id) %>,
          <%= link_to "删除", todo_path(todo.id), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="box post">
    <h2>添加</h2>
    <%= form_for @todo do |f| %>
      <p> <%= f.text_field :title, class: 'long_txt' %> </p >
      <p> <%= f.submit "提交", class: 'submit' %> </p >
    <% end %>
  </div>

</div> <!— main end —>
